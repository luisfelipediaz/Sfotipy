@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a
	text-decoration none
body
	font-size 16px
	font-family 'Varela Round', sans-serif
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
//buttons
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em
	color gris_oscuro
//oocss classes
.container
	padding 1.4rem
	font-size 0
	text-align center
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)
.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin 0
	&.gray
		color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro
.menu
	display none
.name
	color gris_oscuro
.relative
	position relative
.autor
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.left
	float left
.right
	float right
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min		
		left 0
	.max		
		right 0
	.total
		height 5px
		background gris_claro
		width 75%
		border-radius 5px
		margin 0 auto
	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		position relative
	.circle
		width 10px
		height 10px
		background gris_oscuro
		border-radius 50%
		position absolute
		right 0
		top -2px
.header
	height 3.5em
	//a
		//display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing	
	&.small
		width 20em
		margin 0 auto
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em
.playlist
	display none
	width 22em		
	padding 0 2em
	border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0			
	.action
		font-size .8em
.isotipo
	width 122px
.logo
	display none
	padding 1.3em 0	
	overflow hidden
	background white
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	position relative
	top	9px
	margin-left .5em
	&:after
		content ""
		border-left 7px solid transparent
		border-right 7px solid transparent			
		border-top 9px solid gris_claro
		display inline-block
		margin-left .4em
@media screen and (min-width:480px)	
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden			
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none			
			a
				color gris_oscuro
				text-transform uppercase				
				padding 1em
				cursor pointer
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_oscuro
	.music
		width 32.5em
		float left
		.description
			display none
	
	.header
		height auto
		border none
		.title
			display none
	.playlist
	.logo
		display block