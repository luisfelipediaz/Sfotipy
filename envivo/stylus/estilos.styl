@import "nib"
@import "normalize.styl"
@import "fonts.styl"
	 
vendor-prefixes = webkit o moz official holamundo

//mixins
//animacion(parametro)
//	-webkit-animation parametro
//	-moz-animation parametro
//	-o-animation parametro
//	-ms-animation parametro
//	animation parametro

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a
	text-decoration none
body
	font-size 16px
	font-family 'Varela Round', sans-serif
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
//buttons
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em
	color gris_oscuro
//oocss classes
.container
	padding 1.4rem
	font-size 0
	text-align center
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)
.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin 0
	&.gray
		color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro
.menu
	display none
.name
	color gris_oscuro
.relative
	position relative
.autor
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.left
	float left
.right
	float right
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min		
		left 0
	.max		
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		animation 250s state infinite linear
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.circle
		animation 1s circle infinite
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
@keyframes state
	0%
		width 0	
	100%
		width 100%
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0
.header
	height 3.5em
	//a
		//display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing	
	&.small
		width 20em
		margin 0 auto
.input
	border 1px solid gris_claro
	border-radius 5px
	height 2.5em
	padding 0 1em 0 2em
.search-icon
	color gris_claro
	left .5em
	position absolute
	top .8em
.close-icon
	color gris_claro
	font-size 1.2em
	position absolute
	right .5em
	top .5em
.playlist
	border-left 1px solid gris_claro
	display none
	padding 0 2em
	width 22em		
	.list
		list-style none
	.item
		padding 1em 0			
	.action
		font-size .8em
.isotipo
	width 122px
.logo
	background white
	display none
	//overflow hidden
	padding 1.3em 0	
	clearfix()
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	margin-left .5em
	position relative
	top	9px
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent			
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em
@media screen and (min-width:480px)	
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			height auto
			width 100%
	.playing
		&.medium
			width auto

@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			overflow hidden			
			width 62.5em
	.menu
		background gris_mas_claro
		border-top 1px solid gris_claro
		display block
		overflow hidden
		.item
			float left
			list-style none
			a
				border-top 5px solid transparent
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				transition .3s border-top				
				&:hover
					border-top 5px solid gris_oscuro
	.music
		float left
		width 32.5em
		.description
			display none
	
	.header
		border none
		height auto
		.title
			display none
	.playlist
	.logo
		display block